@model SignUpViewModel

@{
    Layout = "../Shared/_LoginRegisterLayout.cshtml";
    ViewData["Title"] = "Register";
}

<div class="lr-container">
    <div class="lr-header">
        Create an account to participate in auctions
    </div>
    <div class="lr-body">
        <form method="post" asp-controller="Authentication" asp-action="SignUp">
            <div class="form-group">
                <label for="formGroupExampleInput">First name</label>
                <input type="text" asp-for="FirstName" class="form-control" id="formGroupExampleInput">
                <span class="text-danger" asp-validation-for="FirstName"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput">Last name</label>
                <input type="text" asp-for="LastName" class="form-control" id="formGroupExampleInput">
                <span class="text-danger" asp-validation-for="LastName"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">E-mail</label>
                <input type="email" asp-for="EmailAddress" class="form-control" id="formGroupExampleInput2">
                <span class="text-danger" asp-validation-for="EmailAddress"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Password</label>
                <input type="password" asp-for="Password" class="form-control" id="formGroupExampleInput2">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Confirm Password</label>
                <input type="password" asp-for="ConfirmPassword" class="form-control" id="formGroupExampleInput2">
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
            <button type="submit" class="btn btn-primary submit-btn">Sign Up</button>
        </form>
    </div>
    <div class="lr-footer">
        <a asp-controller="Authentication" asp-action="SignIn">Have an account?</a>
    </div>
</div>